<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetalhesLutador">

    <TextView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voltar"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:linksClickable="true"
        android:layout_margin="10dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardImgLutador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnBack"
        app:cardCornerRadius="150dp"
        >

        <ImageView
            android:id="@+id/imgLutadorGrande"
            android:layout_width="300dp"
            android:layout_height="300dp"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardImgLutador"
        android:layout_alignStart="@id/cardImgLutador"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-40dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="Nome: "/>

    <TextView
        android:id="@+id/txtClasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNome"
        android:layout_alignStart="@id/txtNome"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="Classe: "/>

    <TextView
        android:id="@+id/txtCusto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtClasse"
        android:layout_alignStart="@id/txtClasse"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="Custo: "/>

    <TextView
        android:id="@+id/txtFrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtCusto"
        android:layout_alignStart="@id/txtCusto"
        android:layout_marginTop="10dp"
        android:textSize="25sp"
        android:textColor="@android:color/black"
        android:text="Frase de Efeito: "/>

